

{
  "entities": {
    "Hotel": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Hotel",
      "type": "object",
      "description": "Represents a hotel registered in the system.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the hotel."
        },
        "email": {
          "type": "string",
          "description": "Email address of the hotel, used for login and communication.",
          "format": "email"
        },
        "contactNumber": {
          "type": "string",
          "description": "Official contact number of the hotel."
        },
        "adminName": {
          "type": "string",
          "description": "Name of the administrator for the hotel account."
        },
        "location": {
          "type": "string",
          "description": "Location of the hotel (e.g., address, coordinates)."
        },
        "status": {
            "type": "string",
            "description": "The current status of the hotel account.",
            "enum": ["Active", "Disabled"]
        },
        "plan": {
            "type": "string",
            "description": "The subscription plan for the hotel.",
            "enum": ["Boutique", "Business", "Enterprise"]
        },
        "roomLimit": {
            "type": "number",
            "description": "The maximum number of rooms this hotel can create."
        },
        "ownerUids": {
            "type": "array",
            "items": { "type": "string" },
            "description": "An array of Firebase UIDs for users who have ownership-level access."
        },
        "teamSize": {
            "type": "number",
            "description": "The total number of team members associated with the hotel."
        },
        "adminCount": {
            "type": "number",
            "description": "The number of team members with the 'Admin' role."
        },
        "managerCount": {
            "type": "number",
            "description": "The number of team members with the 'Manager' role."
        },
        "receptionCount": {
            "type": "number",
            "description": "The number of team members with the 'Reception' role."
        },
        "roomCount": {
            "type": "number",
            "description": "The total number of rooms in the hotel."
        }
      },
      "required": [
        "name",
        "email",
        "contactNumber",
        "adminName",
        "location",
        "ownerUids"
      ]
    },
    "FranchiseOwner": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "FranchiseOwner",
      "type": "object",
      "description": "Represents a user who owns and has analytics access to multiple hotels.",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "delegatedHotels": {
          "type": "array",
          "items": { "type": "string" },
          "description": "An array of Hotel IDs this owner has access to."
        }
      },
      "required": ["name", "email"]
    },
    "AccessRequest": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "AccessRequest",
        "type": "object",
        "description": "Represents a franchise owner's request for access to a hotel.",
        "properties": {
            "requesterUid": { "type": "string" },
            "requesterEmail": { "type": "string", "format": "email" },
            "requestDate": { "type": "string", "format": "date-time" }
        },
        "required": ["requesterUid", "requesterEmail", "requestDate"]
    },
    "Room": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Room",
      "type": "object",
      "description": "Represents a room within a hotel.",
      "properties": {
        "number": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "stays": {
          "type": "array",
          "items": {
            "$ref": "#/entities/Stay"
          }
        },
        "outOfOrderBlocks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "from": { "type": "string", "format": "date-time" },
              "to": { "type": "string", "format": "date-time" }
            }
          }
        }
      },
      "required": ["number", "type", "status"]
    },
    "Stay": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Stay",
      "type": "object",
      "description": "Represents a guest's stay at a hotel.",
      "properties": {
        "stayId": {
          "type": "string"
        },
        "guestName": {
          "type": "string"
        },
        "guestNumber": {
          "type": "string"
        },
        "checkInDate": {
          "type": "string",
          "format": "date-time"
        },
        "checkOutDate": {
          "type": "string",
          "format": "date-time"
        },
        "roomCharge": {
          "type": "number"
        },
        "paidAmount": {
          "type": "number"
        },
        "isBilledToCompany": {
          "type": "boolean"
        },
        "status": {
          "type": "string"
        }
      },
      "required": ["stayId", "guestName", "checkInDate", "checkOutDate", "roomCharge"]
    },
    "ActiveStay": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "ActiveStay",
        "type": "object",
        "description": "A public document for validating an active stay ID.",
        "properties": {
            "hotelId": { "type": "string" },
            "roomNumber": { "type": "string" },
            "roomId": { "type": "string" }
        },
        "required": ["hotelId", "roomNumber", "roomId"]
    },
    "RoomCategory": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "RoomCategory",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "basePrice": { "type": "number" },
        "quickDiscounts": { "type": "array", "items": { "type": "number" } },
        "cleaningConsumables": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "itemId": { "type": "string" },
              "quantity": { "type": "number" }
            }
          }
        }
      },
      "required": ["name", "description", "basePrice"]
    },
    "CheckedOutStay": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CheckedOutStay",
      "type": "object",
      "properties": {
        "stayId": { "type": "string" },
        "roomNumber": { "type": "string" },
        "roomType": { "type": "string" },
        "guestName": { "type": "string" },
        "checkInDate": { "type": "string", "format": "date-time" },
        "checkOutDate": { "type": "string", "format": "date-time" },
        "finalBill": { "$ref": "#/entities/FinalBill" }
      },
      "required": ["stayId", "roomNumber", "guestName", "checkInDate", "checkOutDate", "finalBill"]
    },
    "FinalBill": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "FinalBill",
      "type": "object",
      "properties": {
        "roomCharges": { "type": "object", "properties": {"label": {"type": "string"}, "amount": {"type": "number"}}},
        "serviceCharges": { "type": "array", "items": {"$ref": "#/entities/ServiceRequest"} },
        "subtotal": { "type": "number" },
        "serviceChargeAmount": { "type": "number" },
        "gstAmount": { "type": "number" },
        "paidAmount": { "type": "number" },
        "discount": { "type": "number" },
        "total": { "type": "number" },
        "paymentMethod": { "type": "string" }
      }
    },
    "ServiceRequest": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "ServiceRequest",
        "type": "object",
        "properties": {
            "roomNumber": {"type": "string"},
            "service": {"type": "string"},
            "status": {"type": "string"},
            "time": {"type": "string"},
            "creationTime": {"type": "string", "format": "date-time"},
            "staff": {"type": "string"},
            "assignedTo": {"type": "string"},
            "isManualCharge": {"type": "boolean"},
            "price": {"type": "number"},
            "category": {"type": "string"},
            "isEmergency": { "type": "boolean" }
        },
        "required": ["roomNumber", "service", "status", "creationTime"]
    },
    "Restaurant": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Restaurant",
        "type": "object",
        "properties": {
            "name": {"type": "string"},
            "imageUrl": { "type": "string", "format": "uri" },
            "cuisineTags": { "type": "array", "items": { "type": "string" } },
            "slaMinutes": { "type": "number", "description": "Service Level Agreement in minutes." }
        },
        "required": ["name"]
    },
    "HotelService": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "HotelService",
        "type": "object",
        "properties": {
            "name": {"type": "string"},
            "category": {"type": "string"},
            "subcategory": {"type": "string"},
            "price": {"type": "number"},
            "description": {"type": "string"},
            "restaurantId": {"type": "string"},
            "dietaryType": {
                "type": "string",
                "enum": ["veg", "non-veg"],
                "description": "The dietary type of the service, e.g., vegetarian or non-vegetarian."
            }
        },
        "required": ["name", "category", "price"]
    },
    "ServiceCategory": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "ServiceCategory",
        "type": "object",
        "properties": {
            "name": { "type": "string" },
            "type": { "type": "string", "enum": ["F&B", "Other"] },
            "slaMinutes": { "type": "number", "description": "Service Level Agreement in minutes." }
        },
        "required": ["name", "type"]
    },
    "InventoryItem": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "InventoryItem",
      "type": "object",
      "description": "Represents an item in the hotel's inventory.",
      "properties": {
        "name": { "type": "string" },
        "category": { "type": "string" },
        "stock": { "type": "number" },
        "parLevel": { "type": "number" },
        "unit": { "type": "string" }
      },
      "required": ["name", "category", "stock", "parLevel", "unit"]
    },
    "Vendor": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Vendor",
      "type": "object",
      "description": "Represents a supplier for the hotel.",
      "properties": {
        "name": { "type": "string" },
        "contactPerson": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "address": { "type": "string" },
        "category": { "type": "string" }
      },
      "required": ["name", "contactPerson", "email", "phone"]
    },
    "StockMovement": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "StockMovement",
      "type": "object",
      "description": "Represents a movement of stock for an inventory item.",
      "properties": {
        "itemId": { "type": "string" },
        "itemName": { "type": "string" },
        "type": { "type": "string", "enum": ["Restock", "Consumption", "Adjustment"] },
        "quantity": { "type": "number" },
        "date": { "type": "string", "format": "date-time" },
        "notes": { "type": "string" }
      },
      "required": ["itemId", "itemName", "type", "quantity", "date"]
    },
    "TeamMember": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "TeamMember",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "department": { "type": "string" },
        "role": { "type": "string", "enum": ["Admin", "Manager", "Reception", "Member"] },
        "shiftId": { "type": "string" },
        "attendanceStatus": { "type": "string" },
        "lastClockIn": { "type": "string", "format": "date-time" },
        "restaurantId": { "type": "string" }
      },
      "required": ["name", "email", "department", "role", "shiftId"]
    },
    "Department": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Department",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "manages": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["name"]
    },
    "Shift": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Shift",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "startTime": { "type": "string", "format": "time" },
        "endTime": { "type": "string", "format": "time" }
      },
      "required": ["name", "startTime", "endTime"]
    },
    "SlaRule": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SlaRule",
      "type": "object",
      "properties": {
        "serviceName": { "type": "string" },
        "timeLimitMinutes": { "type": "number" }
      },
      "required": ["serviceName", "timeLimitMinutes"]
    },
    "ServiceTiming": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ServiceTiming",
      "type": "object",
      "description": "Represents the operational hours for a hotel service.",
      "properties": {
        "name": { "type": "string" },
        "enabled": { "type": "boolean" },
        "startTime": { "type": "string", "format": "time" },
        "endTime": { "type": "string", "format": "time" }
      },
      "required": ["name", "enabled", "startTime", "endTime"]
    },
    "HotelSettings": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "HotelSettings",
        "type": "object",
        "description": "Stores all configuration and settings for a specific hotel.",
        "properties": {
            "country": { "type": "string" },
            "currency": { "type": "string" },
            "language": { "type": "string" },
            "legalName": { "type": "string" },
            "address": { "type": "string" },
            "gstNumber": { "type": "string" },
            "gstRate": { "type": "number" },
            "serviceChargeRate": { "type": "number" },
            "wifiSSID": { "type": "string" },
            "wifiPassword": { "type": "string" }
        }
    },
    "Broadcast": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Broadcast",
        "type": "object",
        "description": "Represents a guest-facing broadcast or announcement.",
        "properties": {
            "title": { "type": "string" },
            "message": { "type": "string" },
            "status": { "type": "string", "enum": ["Draft", "Active", "Inactive", "Archived"] },
            "type": { "type": "string", "enum": ["One-time", "Recurring"] },
            "startDate": { "type": "string", "format": "date-time" },
            "endDate": { "type": "string", "format": "date-time" },
            "startTime": { "type": "string", "format": "time" },
            "endTime": { "type": "string", "format": "time" },
            "daysOfWeek": { "type": "array", "items": { "type": "number" } },
            "targetRoomCategories": { "type": "array", "items": { "type": "string" } },
            "displayFrequency": { "type": "string", "enum": ["always-visible", "once-per-session", "once-per-hour", "once-per-day"] }
        },
        "required": ["title", "message", "status", "type"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ],
    "customClaims": {
      "isSuperAdmin": { "type": "boolean" },
      "isFranchiseOwner": { "type": "boolean" }
    }
  },
  "firestore": {
    "/activeStays/{stayId}": {
        "schema": { "$ref": "#/entities/ActiveStay" },
        "description": "A public collection for validating active stay IDs for guest login."
    },
    "/hotels/{hotelId}": {
      "schema": { "$ref": "#/entities/Hotel" },
      "description": "Represents a hotel entity, identified by a unique ID."
    },
    "/hotels/{hotelId}/accessRequests/{franchiseOwnerUid}": {
        "schema": { "$ref": "#/entities/AccessRequest" },
        "description": "Stores pending requests from franchise owners for access."
    },
    "/hotels/{hotelId}/delegates/{franchiseOwnerUid}": {
      "schema": {},
      "description": "A document indicating a franchise owner has been granted delegated read access to this hotel."
    },
    "/hotels/{hotelId}/rooms/{roomId}": {
      "schema": { "$ref": "#/entities/Room" },
      "description": "Represents a room within a hotel."
    },
    "/hotels/{hotelId}/roomCategories/{categoryId}": {
        "schema": { "$ref": "#/entities/RoomCategory" },
        "description": "Stores room categories for a hotel."
    },
    "/hotels/{hotelId}/serviceCategories/{serviceCategoryId}": {
        "schema": { "$ref": "#/entities/ServiceCategory" },
        "description": "Stores all custom service categories for a hotel."
    },
    "/hotels/{hotelId}/checkoutHistory/{historyId}": {
        "schema": { "$ref": "#/entities/CheckedOutStay" },
        "description": "Stores a log of all past/checked-out stays."
    },
    "/hotels/{hotelId}/serviceRequests/{requestId}": {
        "schema": { "$ref": "#/entities/ServiceRequest" },
        "description": "Stores all service requests made by guests or staff."
    },
    "/hotels/{hotelId}/restaurants/{restaurantId}": {
        "schema": { "$ref": "#/entities/Restaurant" },
        "description": "Stores all restaurants or kitchens for a hotel."
    },
    "/hotels/{hotelId}/hotelServices/{serviceId}": {
        "schema": { "$ref": "#/entities/HotelService" },
        "description": "Stores all F&B and other hotel services."
    },
    "/hotels/{hotelId}/inventory/{itemId}": {
      "schema": { "$ref": "#/entities/InventoryItem" },
      "description": "Manages inventory items for a specific hotel."
    },
    "/hotels/{hotelId}/vendors/{vendorId}": {
      "schema": { "$ref": "#/entities/Vendor" },
      "description": "Manages vendors for a specific hotel."
    },
    "/hotels/{hotelId}/stockMovements/{movementId}": {
      "schema": { "$ref": "#/entities/StockMovement" },
      "description": "Logs all stock movements for a specific hotel."
    },
    "/hotels/{hotelId}/teamMembers/{memberId}": {
      "schema": { "$ref": "#/entities/TeamMember" },
      "description": "Manages team members for a specific hotel."
    },
    "/hotels/{hotelId}/departments/{departmentId}": {
      "schema": { "$ref": "#/entities/Department" },
      "description": "Manages departments for a specific hotel."
    },
    "/hotels/{hotelId}/shifts/{shiftId}": {
      "schema": { "$ref": "#/entities/Shift" },
      "description": "Manages work shifts for a specific hotel."
    },
    "/hotels/{hotelId}/slaRules/{ruleId}": {
      "schema": { "$ref": "#/entities/SlaRule" },
      "description": "Manages Service Level Agreement rules."
    },
    "/hotels/{hotelId}/serviceTimings/{timingId}": {
      "schema": { "$ref": "#/entities/ServiceTiming" },
      "description": "Manages operational hours for hotel services."
    },
    "/hotels/{hotelId}/config/settings": {
        "schema": { "$ref": "#/entities/HotelSettings" },
        "description": "A singleton document to store all hotel-specific configurations."
    },
    "/hotels/{hotelId}/broadcasts/{broadcastId}": {
        "schema": { "$ref": "#/entities/Broadcast" },
        "description": "Stores guest-facing broadcasts and announcements."
    }
  }
}
